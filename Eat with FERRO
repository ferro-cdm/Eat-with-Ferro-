<script>
  // ===== JavaScript to switch sections =====
  function showSection(id) {
    const sections = ['home','menu','order','contact'];
    sections.forEach(sec => {
      document.getElementById(sec).style.display = (sec === id) ? 'block' : 'none';
    });
  }
</script>

